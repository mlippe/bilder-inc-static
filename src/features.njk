{% import "./template-parts/_footer.njk" as footer %}
{% import "./template-parts/_floating-content.njk" as floatingContent %}
{% import "./template-parts/_navbar.njk" as navBar %}
{% import "./template-parts/_offer-section.njk" as offerSection %}
{% import "./template-parts/_head.njk" as head %}
<html lang="en">
  <head>
    {{ head.el(false) }}
    <title>Features - Bilder Inc</title>
  </head>
  <body class="features">
    {{ navBar.el(false, "features") }}
    <section class="hero scroll-animation">
      <div class="background-animation inner-delay level-2">
        <div class="gradient top"></div>
        <div class="gradient bottom"></div>
        <img src="../assets/img/features/hero.jpg"/>
      </div>
      <div class="layout inner-delay level-1">
        <div class="inner grid-max">
          <h1>You like taking photos.<br>We like organizing them.</h1>
          <h3>BilderAi is the magic part in the Bilder system. It takes care of all the tedious work for you.</h3>
        </div>
      </div>
    </section>
    <section class="bilder-ai">
      <div class="image-container">
        <img src="/assets/img/features/bilder-ai.jpg"/>
      </div>
      <div class="inner layout scroll-animation level-1">
        <div class="content grid-max">
          <div class="text-wrap">
            <h1>
              <em>BilderAi</em>
              was designed to assist with your photos</h1>
            <h3>Discover the advanced photo organization and improvement features below.</h3>
          </div>
        </div>
      </div>
    </section>
    <section id="organization" class="organization">
      <div class="intro scroll-animation level-1">
        <div class="layout">
          <div class="grid-max">
            <h1>Library<br><em>organization</em>
            </h1>
          </div>
        </div>
      </div>
      {{ floatingContent.el(false,'left','assets/img/features/preselection.jpg', '360px', 'Automatic preselection','Sort out blurry images or accidential photos of the floor. Basic edits are applied for each import.', '', 'orange' ) }}
      {{ floatingContent.el(false,'center','assets/img/features/filtering.jpg', '90px', 'Custom filtering','Scroll through your library and see only BilderAi preselected photos, all photos or only the best ones.', '', '' ) }}
      {{ floatingContent.el(false,'right','assets/img/features/best_photo.jpg', '110px', 'Which photo is best?','Stop thinking about what photo to keep in a series of similar images, BilderAi chooses the best!', '', 'green' ) }}
      {{ floatingContent.el(false,'left','assets/img/features/categorization.jpg', '360px', 'Intelligent categorization','BilderAi is able to spot content in photos, which allows for automated sorting in categories, e.g. cars, dogs...', '', 'blue', true ) }}
      {{ floatingContent.el(false,'center','assets/img/features/collections.jpg', '110px', 'Automated photo collections','BilderAi automatically prepares collections on specific themes, such as locations or events for you!', '', '' ) }}
      {{ floatingContent.el(false,'left','assets/img/features/adjustments.jpg', '100px', 'Powerful adjustments','Be creative and edit images with BilderApps powerful tools. Non-destructive and integrated.', '', 'orange' ) }}
    </section>
    <section id="sharing" class="sharing">
      <div class="intro scroll-animation level-1">
        <div class="layout">
          <div class="grid-max">
            <h1>Photo
              <em>sharing</em>
            </h1>
          </div>
        </div>
      </div>
      {{ floatingContent.el(false,'right','assets/img/features/easy_sharing.jpg', '90px', 'Sharing made easy','Share your favourite photos through BilderApps. Shared images will appear directly in others libraries.', '', 'orange' ) }}
      {{ floatingContent.el(false,'center','assets/img/features/inbox.jpg', '90px', 'Your personal photo inbox','Get notified when someone shares photos with you. Enjoy full quality images without any compression.', '', '', true ) }}
      {{ floatingContent.el(false,'left','assets/img/features/showcase.jpg', '160px', 'Showcase your images','With just a single click you can share a collection of images to the web. Choose a layout, set a subtitle, thats it.', '', 'green', true ) }}
      {{ floatingContent.el(false,'right','assets/img/features/enjoy.jpg', '110px', 'Enjoy your photos again','BilderBook and BilderBeam make it fun to look at your photos. Pick them up anytime and experience your memories like in the old times.', '', 'blue' ) }}
    </section>
    <section class="anywhere">
      <div class="intro scroll-animation level-1">
        <div class="layout">
          <div class="grid-max">
            <h1>And the best thing:<br>BilderApps make your<br>
              <em>photos available anywhere</em>
            </h1>
          </div>
        </div>
      </div>
      <div class="image-container scroll-animation level-2">
        <img src="../assets/img/features/devices.jpg"/>
      </div>
    </section>
    {{ offerSection.el(false) }}
    {{ footer.el(false) }}
    {% include "./template-parts/_animation-scripts.njk" %}
    <script src="../js/main.js"></script>
    <script src="../js/nav.js"></script>
  </body>
</html>